{
	"extends": "standard-with-typescript",
	"rules": {
		"semi": "off",
		"@typescript-eslint/semi":	[2, "always"],
		"indent": "off",
		"@typescript-eslint/indent": ["error", 4],
		"@typescript-eslint/consistent-type-definitions": "off",
		"@typescript-eslint/no-namespace": "off"
	},
	"parserOptions": {
		"project": "./tsconfig.json"
	}
}
